                        android:layout_marginTop="1dp"
                        android:background="@color/colorWhite"
                        android:drawableStart="@drawable/ic_ok_48"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="13dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="https://ok.ru/profile/574569200229"
                        android:fontFamily="@font/roboto_regular"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_gravity="start"
                        android:background="@color/colorWhite" />

                    <TextView
                        android:id="@+id/github"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/colorWhite"
                        android:drawableStart="@drawable/ic_github_mark_24"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="13dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="https://github.com/Jhoysbou"
                        android:fontFamily="@font/roboto_regular"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="13dp"
                        android:layout_height="1dp"
                        android:layout_gravity="start"
                        android:background="#FFFFFF" />

                    <TextView
                        android:id="@+id/vkontakte"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="0dp"
                        android:background="@color/colorWhite"
                        android:drawableStart="@drawable/ic_vk_logo_24"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="13dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:text="https://vk.com/haxephado"
                        android:fontFamily="@font/roboto_regular"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/exitButton"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="70dp"
                    android:text="@string/exit"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorRed"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
