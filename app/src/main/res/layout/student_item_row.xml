<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_item__image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/person_item__name"
        android:src="@drawable/img0"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/person_item__name"
        app:layout_constraintStart_toEndOf="@id/person_item__image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/person_item__arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        tools:text="Дмитрий Махнев"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="21dp"
        android:id="@+id/person_item__arrow"
        app:layout_constraintStart_toEndOf="@id/person_item__name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp"
        android:src="@drawable/ic_arrow_forward"/>


</androidx.constraintlayout.widget.ConstraintLayout>